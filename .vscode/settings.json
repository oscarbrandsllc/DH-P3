    "git rev-list": true
  },
  "remoteHub.commitDirectlyWarning": "off",
  "git.enableSmartCommit": true,
  "chat.edits2.enabled": true,
  "workbench.editor.enablePreview": false,

  "workbench.colorCustomizations": {
    "[Dracula Theme]": {
      "editor.selectionBackground": "#7430a4cb",
      "editor.inactiveSelectionBackground": "#7430a443",
      "editor.selectionHighlightBackground": "#8036b58a"
    }
  },

  "editor.tokenColorCustomizations": {
    "[Dracula Theme]": {
      "textMateRules": [
        {
          "name": "Strings ‚Üí rose",
          "scope": [
            "string",
            "string.quoted",
            "string.quoted.double",
            "string.quoted.single",
            "string.template",
            "constant.character.escape"
          ],
          "settings": { "foreground": "#ff4d97" }
        },
        {
          "name": "HTML/JSX attribute names ‚Üí rose",
          "scope": [
            "entity.other.attribute-name",
            "meta.tag.attribute",
            "support.variable.property.dom",
            "support.variable.property"
          ],
          "settings": { "foreground": "#46f8bd" }
        },

        /* Markdown comments ‚Üí salmon */
        {
          "name": "Markdown comments ‚Üí salmon",
          "scope": [
            "text.html.markdown comment",
            "text.html.markdown punctuation.definition.comment"
          ],
          "settings": { "foreground": "#FA8072" }
        }
      ]
    }
  },

  "editor.semanticTokenColorCustomizations": {
    "[Dracula Theme]": {
      "enabled": true,
      "rules": {
        "string": "#bc8692",
        "property": "#cbd6a2",
        "enumMember": "#e8738c"
      }
    }
  },

