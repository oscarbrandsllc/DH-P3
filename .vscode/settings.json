  "git.confirmSync": false,
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": false,
  "notebook.stickyScroll.enabled": true,
  "window.menuBarVisibility": "classic",
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.codingAgent.promptForConfirmation": false,
  "chat.agent.maxRequests": 50,
  "chat.agent.thinkingStyle": "collapsedPerItem",
  "chat.agent.todoList": {
    "position": "default"
  },
  "chat.editing.confirmEditRequestRetry": false,
  "chat.fontSize": 11,
  "chat.editor.fontSize": 10,
  "chat.emptyState.history.enabled": true,
  "window.nativeTabs": true,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "editor.fontSize": 11,
  "markdown.preview.fontSize": 11,
  "debug.console.fontSize": 11,
  "scm.inputFontSize": 11,
  "terminal.integrated.fontSize": 9,
  "editor.minimap.sectionHeaderFontSize": 11,
  "liveServer.settings.donotShowInfoMsg": true,
  "chat.tools.terminal.autoApprove": {
    "sed": true,
    "nl": true,
